/**
 * Cloud Interface API
 *
 * Minimal functions for telling the Cloud Interface to do things.
 * Most applications should not need to use this!
 */

//--------------------------------------------------------------------------------------------------
/**
 * Maximum number of bytes (excluding terminator) of the JSON config to load.
 */
//--------------------------------------------------------------------------------------------------
DEFINE CI_MAX_CFG_STR = 100000;

//--------------------------------------------------------------------------------------------------
/**
 * Maximum size in bytes of the Octave version
 */
//--------------------------------------------------------------------------------------------------
DEFINE VERSION_STRING_MAX_LENGTH = 255;

//--------------------------------------------------------------------------------------------------
/**
 * Force the Store and Forward store to write its current contents to disk.
 */
//--------------------------------------------------------------------------------------------------
FUNCTION le_result_t PersistStore
(
);

//--------------------------------------------------------------------------------------------------
/**
 * Force the Cloud Interface to load a configuration JSON
 */
//--------------------------------------------------------------------------------------------------
FUNCTION le_result_t LoadConfig
(
    string config[CI_MAX_CFG_STR] IN///< JSON Configuration
);

//--------------------------------------------------------------------------------------------------
/**
 * Get the cloudInterface version
 */
//--------------------------------------------------------------------------------------------------
FUNCTION GetVersion(
    string version[VERSION_STRING_MAX_LENGTH] OUT//< version string
);

